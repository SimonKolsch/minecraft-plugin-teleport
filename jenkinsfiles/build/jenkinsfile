pipeline {
    agent any
    tools {maven "maven" sonar "sonar"}
    stages {
        stage('Build') {
            steps {
                echo "Build"
                sh "mvn clean install"
            }
        }
        stage('Test') {
            steps {
                echo "Test"
            }
        }
        stage('Deploy') {
            steps {
                echo "Deploy"
            }
        }
        stage('SonarQube Analysis') {
            steps {
                echo "Sonar Analysis"
                withSonarQubeEnv() {
                  sh "mvn clean verify sonar:sonar -Dsonar.projectKey=Teleport-MC-Plugin"
                }
            }
        }
    }
}