pipeline {
    agent {
      docker { image 'maven:3.8.3-openjdk-17' }
    }
    tools {maven "maven", docker "docker"}
    stages {
        stage('Build') {
            steps {
                echo "Build"
                sh "mvn clean install"
            }
        }
        stage('Test') {
            steps {
                echo "Test"
            }
        }
        stage('Deploy') {
            steps {
                echo "Deploy"
            }
        }
    }
}